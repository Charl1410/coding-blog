<div class="title">
        <img id="logo" src = "../project-2-views/logo.png">

        <p class="mono-font">CODE BLOG</p>
        <p class="monospace">For all your coding needs</p>
</div>

    <div class="card-container">
        {{#each posts as |post|}}
      <div class="card">
        <p class="blog-title">{{post.post_title}}</p>
        <p>{{post.date_created}}</p>
        <p class="posted-by">{{post.user.name}}</p>

        <p>{{post.post_content}}</p>        
            <div class="interaction-bar">
            <button>Comment</button>
            <button>Upvote</button>
            <button>Downvote</button>
            <button>Save to reading list</button>
      </div>

          <div class="comment-section">
              <div>
                <textarea class="create-comments">Create your own comment</textarea> <button>Add Comment</button>     
            </div>

           <div class="loaded-comments-container">

                {{#each comments as |comment|}}
                {{!-- Not sure why this isnt working  --}}
                    <p>{{}}</p>
                    <p class="loaded-comments">{{comment.text}}</p>
      
                {{/each}}
          </div>
          </div>
    </div>
   

</div>
        {{/each}}

    
     
   
