<div class="card">
        <p class="blog-title"><a href="/post/{{id}}"></a>{{post_title}}</p>
        <p>{{date_created}}</p>
        <p class="posted-by">{{user.name}}</p>


        <p>{{post_content}}</p>        
            <div class="interaction-bar">
            <button>Comment</button>
            <button>Upvote</button>
            <button>Downvote</button>
            <button>Save to reading list</button>
             </div>


 <div class="comment-section">
              <div>
                <textarea class="create-comments">Create your own comment</textarea> <button>Add Comment</button>     
            </div>
            

                <div class="loaded-comments-container">

                        {{#each comments as |comment|}}
                        
                            <p class="loaded-comments">{{name}}: {{comment.text}}</p>
        
                        {{/each}}
                </div>
            </div>

</div>